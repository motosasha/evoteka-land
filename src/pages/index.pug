extends ../templates/template__default.pug

block variables
  - isMainPage = false
  - pageTitle = "Evoteka"
  - metaDescription = "description"
  - metaKeywords = "keywords"

block content
  .container
    section.hero
      .hero__inner
        img.hero__img(src= path.img + "auto-logo.svg", alt="")
        .hero__info
          h1.hero__title Увеличение продаж за счет роста положительных отзывов и рейтинга компании #[span без накруток и ботов]
          a.button.button--primary.hero__button(data-hystmodal="#popup") Узнать подробнее
      picture.hero__bg
        source(srcset= path.img + "hero-bg--d.jpg", media="(min-width: 1280px)")
        source(srcset= path.img + "hero-bg--t.jpg", media="(min-width: 576px)")
        img(src= path.img + "hero-bg--m.jpg", alt="")

    section.section.section--white.section-imaged
      .section__inner.section-imaged__inner
        .section-imaged__info
          h2.section__title Как рейтинги и отзывы влияют на ваш бизнес
          .list.list--pr
            ul.list__ul
              li.list__li
                h3.list__title 60% покупателей
                p.list__descr не открывают карточку компании, если рейтинг ниже 3 звезд
              li.list__li
                h3.list__title 50% покупателей
                p.list__descr не рассматривают к посещению компании без отзывов
              li.list__li
                h3.list__title 22% покупателей
                p.list__descr не обращаются в компанию, если преобладают негативные отзывы
        img.section-imaged__image.section-imaged__image--how(src= path.img + "how.jpg", alt="")

    section.shout
      .shout__inner
        h2.shout__title #[span Более 70%] покупателей изучают отзывы о продукте или услуге перед посещением!

    section.section.section--white.section-tiles
      .section__inner.section-tiles__inner
        h2.section__title Как рейтинги и отзывы влияют на ваш бизнес
        .section-tiles__row
          .tile-center
            .tile-center__info
              .tile-center__title На 22% покупателей
              .tile-center__descr становится больше при увеличении рейтинга даже на 0,5 пункта
            img.tile-center__image(src= path.img + "star.jpg", alt="")
          .tile-center
            .tile-center__info
              .tile-center__title В 10 раз больше
              .tile-center__descr трафика при рейтинге 4.0 и больше по сравнению с конкурентами
            img.tile-center__image(src= path.img + "stars.jpg", alt="")
          .tile-center
            .tile-center__info
              .tile-center__title 84% покупателей
              .tile-center__descr доверяют отзывам в интернете не меньше, чем своим знакомым
            img.tile-center__image(src= path.img + "graph.jpg", alt="")

    section.section.section--white.section-tiles
      .section__inner.section-tiles__inner
        h2.section__title Как покупатели выбирают #[span товары/услуги]
        .section-tiles__row
          .tile-post
            .tile-post__info
              .tile-post__descr Положительные письменные отзывы #[strong отметили #[span 75%] опрашиваемых]
            img.tile-post__image(src= path.img + "good-01.jpg", alt="")
          .tile-post
            .tile-post__info
              .tile-post__descr Оценка с высоким звездным рейтингом #[strong отметили #[span 58%] опрашиваемых]
            img.tile-post__image(src= path.img + "good-02.jpg", alt="")
          .tile-post
            .tile-post__info
              .tile-post__descr Компания отвечает на комментарии покупателей #[strong отметили #[span 55%] опрашиваемых]
            img.tile-post__image(src= path.img + "good-03.jpg", alt="")

    section.section.section--white.section-tiles
      .section__inner.section-tiles__inner
        h2.section__title Как покупатели выбирают #[span компанию]
        .section-tiles__row
          .tile-post
            .tile-post__info
              .tile-post__descr Общий звездный рейтинг компании #[strong #[span 85%] опрашиваемых сказали, что это «важно» или «очень важно»]
            img.tile-post__image(src= path.img + "company-01.jpg", alt="")
          .tile-post
